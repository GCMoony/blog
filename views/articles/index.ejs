<!--This is the index, or homepage of the 'articles' route-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../public/assets/styles/utility.css">
    <title>Blog</title>
    
</head>
<body>
    
    <h1>Blog Articles</h1>
    <a href="/articles/new" class="button button-green">New Article +</a>
    <div class="container">
        <% articles.forEach(article => { %>
            <div class="card">
                <h2><%= article.title %></h2>
                <h3><%=article.createdAt.toLocaleDateString()%></h3>
                <p><%=article.description%></p>
            </div>
        <% }) %>
    </div>
</body>
</html>